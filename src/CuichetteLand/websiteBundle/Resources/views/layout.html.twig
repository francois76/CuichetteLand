<!DOCTYPE HTML>
<html>
	<head>
		<title>Cuichette Land</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="stylesheet" href="/assets/css/main.css" />
	</head>
	<body class="landing">
		<div id="page-wrapper">

		

				<header id="header">
					<h1 id="logo"><a href="/"><img src="/images/logo.png" alt="" /></a></h1>
					<nav id="nav">
						<ul>
							<li><a href="/">Accueil</a></li>
							<li>
								<a href="">Accéder au magasin</a>
								<ul>
								{% for categorie in categories %}
									<li><a href="/categories/{{categorie['categorie']}}">{{categorie["categorie"]}}</a></li>
								{% endfor %}
								</ul>
							</li>
							{% if user == "anon." %}
							<li><a href="/login" class="button special">Login</a></li>
							<li><a href="/register" class="button special">Register</a></li>
							{% else %}
							<li><a href="/inbox">Messagerie</a></li>
							<li><a class="button">{{user.account}}€</a></li>
							<li><a href="/panier">Panier</a></li>
							<li><a href="/logout" class="button special">{{user.prenom}} - Se deconnecter</a></li>
							{% endif %}
						</ul>
					</nav>
				</header>

				{% block body %}
				{% endblock %}



			<!-- Footer -->
				<footer id="footer">
					<ul class="copyright">
						<li>&copy; LaTeam coorp All rights reserved.</li>
					</ul>
				</footer>

		</div>

		<!-- Scripts -->
			<script src="assets/js/jquery.min.js"></script>
			<script src="assets/js/jquery.scrolly.min.js"></script>
			<script src="assets/js/jquery.dropotron.min.js"></script>
			<script src="assets/js/jquery.scrollex.min.js"></script>
			<script src="assets/js/skel.min.js"></script>
			<script src="assets/js/util.js"></script>
			<script src="assets/js/main.js"></script>

	</body>
</html>