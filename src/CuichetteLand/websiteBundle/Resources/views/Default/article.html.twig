			{% extends "CuichetteLandwebsiteBundle::layout.html.twig" %}
			{% block body %}
			<!-- Main -->
				<div id="main" class="wrapper style1">
					<div class="container">
						<header class="major">
							<h2>{{produit.nom}}</h2>
						</header>

						<!-- Text -->
							<section>
								<p>{{produit.description}}</p>

								<hr />
							<div>
							{% for picture in pictures %}
							<div class="4u  6u$(xsmall)" style="margin: 10px; float: left;"><span class="image fit"><img src="/images/cuichettes/{{picture["nomImage"]}}" alt="images/pic04.jpg" /></span></div>
							{% endfor %}
							<br/><br/><br/><br/><br/><br/><br/><br/><br/><br/><br/>
							</div>
						
							</section>



						<!-- Table -->
							<section>
								<div class="table-wrapper">
									<table>
										<thead>
											<tr>
												<th>Nom</th>
												<th>Prix</th>
												<th> Catégorie</th>
												<th> Quantite </th>
											</tr>
										</thead>
										<tbody>
{{ form_start(form) }}
										<tr>
											<td>{{produit.nom}}</td>
											<td>{{produit.prix}}€</td>
											<td>{{produit.categorie}}</td>
											<td>{{ form_row(form.quantite)  }}</td>

											<td>{{ form_row(form.save)  }}</td>
											{{ form_end(form) }}
										</tr>
										</tbody>
										<tfoot>
										</tfoot>
									</table>
								</div>

							</section>
										

					</div>


				</div>
				{% endblock %}
